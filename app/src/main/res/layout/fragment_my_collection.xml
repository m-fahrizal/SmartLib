<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyCollectionFragment"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/column2"
        android:backgroundTint="@color/ColorWhiteYellow"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/edt_journal1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/column2"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="My Collection"
            android:textColor="@color/ColorRed_1"
            android:textSize="20dp" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>