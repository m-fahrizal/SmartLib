<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:background="@color/ColorRed_1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="SIGN IN"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/ColorWhite"
        android:id="@+id/R_txt_1"
        />

    <LinearLayout
        android:id="@+id/ly_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_1"
        android:layout_marginStart="30dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/container_shape"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:text="Email"
            android:textColor="@color/ColorBlack" />

        <LinearLayout
            android:id="@+id/ly_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/column"
            android:backgroundTint="@color/ColorGrey_2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_baseline_email_24" />

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/column"
                android:backgroundTint="@color/ColorGrey_2"
                android:fontFamily="@font/poppinssemibold"
                android:hint="Enter Your Email"
                android:paddingLeft="10dp"
                android:textSize="17sp"
                android:textColorHint="#616161" />

        </LinearLayout>

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Password"
            android:textColor="@color/ColorBlack" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/column"
            android:backgroundTint="@color/ColorGrey_2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_baseline_lock_24" />

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/column"
                android:backgroundTint="@color/ColorGrey_2"
                android:fontFamily="@font/poppinssemibold"
                android:hint="Create Password"
                android:paddingLeft="10dp"
                android:textColorHint="#616161"
                android:textSize="17sp"
                android:drawableRight="@drawable/ic_baseline_visibility_off_24"
                android:paddingRight="20dp"
                android:inputType="textPassword"
                android:longClickable="false"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/R_btn_1"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="38dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/txt_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:text="Remember Me"
                android:textColor="@color/ColorBlack"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/R_btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ly_1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:width="300dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/poppinsbold"
            android:text="SIGN IN"
            android:textColor="@color/ColorWhite"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/R_btn_1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:text="Donâ€™t have an Account ? | "
                android:textColor="@color/ColorRed_2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_regist2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="Sign Up"
                android:textColor="@color/ColorRed_2"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>