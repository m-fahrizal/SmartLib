<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JournalDetail1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/column2"
        android:backgroundTint="@color/ColorWhiteYellow"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_bookdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/iconback" />

        <TextView
            android:id="@+id/edt_book"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/column2"
            android:fontFamily="@font/poppinsbold"
            android:paddingLeft="95dp"
            android:paddingTop="15dp"
            android:text="Journal Detail"
            android:textColor="@color/ColorRed_1"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="209dp"
            android:layout_gravity="center"
            android:background="@drawable/cerclebackgroundred"
            android:src="@drawable/image12" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Warehouses information system design and development"
            android:textAlignment="center"
            android:textColor="@color/ColorGreen"
            android:textSize="16sp" />

        <TextView
            android:layout_width="325dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Author :"
            android:textColor="@color/ColorBlack"
            android:textSize="14sp" />

        <TextView
            android:layout_width="325dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppinsregular"
            android:text="R A Darajatun and Sukanta"
            android:textColor="@color/ColorBlack"
            android:textSize="14sp" />

        <TextView
            android:layout_width="325dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppinsbold"
            android:text="IOP Conf. Series: Materials Science and Engineering"
            android:textColor="@color/ColorBlack"
            android:textSize="14sp" />

        <TextView
            android:layout_width="325dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppinsbold"
            android:text="DOI 10.1088/1757-899X/277/1/012002"
            android:textColor="@color/ColorBlack"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_borrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppinsbold"
                android:text="Publication Year : "
                android:textColor="@color/ColorBlack"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppinsregular"
                android:text="2017"
                android:textColor="@color/ColorBlack"
                android:textSize="14sp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_Abstract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Abstract : "
            android:textColor="@color/ColorBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/seemoreJ1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="210dp"
            android:text="see more"
            android:textColor="@color/ColorRed_1"
            android:textSize="15dp"
            android:paddingTop="3dp"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:justificationMode="inter_word"
            android:text="Materials/goods handling industry is fundamental for companies to ensure the
smooth running of their warehouses. Efficiency and organization within every aspect of the
business is essential in order to gain a competitive advantage..."
            android:textColor="@color/ColorBlack"
            android:textSize="14sp" />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/R_btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:width="300dp"
                android:background="@drawable/button_shape_mini"
                android:fontFamily="@font/poppinsbold"
                android:text="BORROW"
                android:textColor="@color/ColorWhite"
                android:textSize="18sp"

                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>